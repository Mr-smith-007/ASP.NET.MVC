@{
    ViewData["Title"] = "Регистрация нового пользователя.";
}

<style>
    table {
        border-spacing: 0 15px;
        align-self: center;
    }

    th {
        background-color: #4287f5;
        color: white;
    }

    th,
    td {
        width: 150px;
        text-align: center;
        border: none;
        padding: 5px;
    }

    h2 {
        color: #4287f5;
    }

    .submit-button {
        position: absolute;
        margin-left: 140px;
    }
</style>

<div class="text-center">
    <div>
        @if (Model == null)
        {
            <h3 style="text-align: left">Добро пожаловать в наш блог!</h3>
            <br>

            <form method="post">
                <table>
                    <tr>
                        <td>Имя:</td>
                        <td><input type="text" name="FirstName" /> </td>
                    </tr>
                    <tr>
                        <td>Фамилия:</td>
                        <td><input type="text" name="LastName" /></td>
                    </tr>
                </table>
                <br>
                <div class="submit-button">
                    <input type="submit" value="Регистрация" />
                </div>
            </form>
        }
        else
        {
            @await Html.PartialAsync("Thanks")
        }
    </div>
</div>